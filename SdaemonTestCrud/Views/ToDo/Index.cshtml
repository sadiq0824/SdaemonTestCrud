@model IEnumerable<SdaemonTestCrud.Models.TaskItem>

@{
    ViewData["Title"] = "Task List";
}

<h2>Task List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">
        <i class="fas fa-plus"></i> Create New
    </a>
</p>

<table class="table table-striped table-bordered" id="taskTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Completed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.DueDate.ToString("yyyy-MM-dd")</td>
                <td>@(item.IsComplete ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                        <i class="fas fa-info-circle"></i> Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <!-- Required for DataTables -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            $('#taskTable').DataTable({
                searching: true,
                ordering: true,
                paging: true,
                lengthChange: true,
                responsive: true,
                autoWidth: false,
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search tasks...",
                    lengthMenu: "Show _MENU_ tasks per page",
                    zeroRecords: "No matching tasks found",
                    info: "Showing _START_ to _END_ of _TOTAL_ tasks",
                    infoEmpty: "No tasks available",
                    infoFiltered: "(filtered from _MAX_ total tasks)"
                },
                columnDefs: [
                    { orderable: false, targets: [5] }
                ]
            });

            // SweetAlert on TempData Success
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                        Swal.fire({
                            icon: 'success',
                            title: 'Success!',
                            text: '@TempData["SuccessMessage"]',
                            timer: 3000,
                            showConfirmButton: false
                        });
            </text>
        }
        });
    </script>
}
